{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <header class="bg-white py-5">
        <div class="w-11/12 mx-auto ">
            <a href="" class="hidden"><span>ONLINE</span> BLOG</a>
            {% for banner in banners %}
                <div style="background: {{ banner.color }}" class="p-4 flex items-center justify-center border-gray-400 ">
                    <h3 class=" text-2xl font-bold text-white mr-5">Breaking News</h3>
                    <p class="text-gray-800 text-xl">{{ banner.title }}</p>
                </div>
            {% endfor %}
        </div>
    </header>
    <nav class="bg-black ">
        <div class="w-11/12 mx-auto">
            <div class="flex justify-between">
                <div class="text-white text-xl cursor-pointer py-4">
                    <i class="fa fa-bars"></i>
                </div>
                <div class="text-white text-2xl py-4">
                    <p><span class="font-bold">ONLINE</span>BLOG</p>
                </div>
                <div class="text-white text-xl cursor-pointer py-4">
                    <i class="fa fas fa-search"></i>
                </div>
                <div class="hidden">
                    form
                </div>
            </div>
        </div>
    </nav>
    <App></App>
    <section class="bg-white h-32 py-2 px-6 my-5 flex flex-col justify-center items-center">
        <div class="w-11/12 mx-auto ">
            <h3 class="text-xl font-semibold pb-2">Suscribe to our newsletter</h3>
            <form action="">
                <div class="flex items-center justify-between md:justify-start ">

                    <div class="border border-gray-500 py-2 px-6 w-3/5 md:w-1/2 ">
                        <input class="w-full focus:outline-none " type="email">
                    </div>
                    <div class="md:ml-5">
                        <button class="bg-purple-500 text-white py-2 px-6">Suscribe</button>
                    </div>
                </div>
            </form>
        </div>
    </section>

{% endblock %}
