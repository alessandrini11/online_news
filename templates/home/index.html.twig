        <App/>
    </div>
    <section class="bg-white h-32 py-2 px-6 my-5 flex flex-col justify-center items-center">
        <div class="w-11/12 mx-auto ">
            <h3 class="text-xl font-semibold pb-2">Suscribe to our newsletter</h3>
